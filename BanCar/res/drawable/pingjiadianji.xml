    <item android:state_checked="true"
        android:state_enabled="true"
         >         
        <shape>  
            <solid android:color="@color/common_bg"/>  
            <stroke  
                android:width="2dp"  
                android:color="@color/common_bg" />  
            <corners   
               android:radius="5dp" 
            />  
            
            <padding  
                android:left="1dp"  
                android:top="1dp"  
                android:right="1dp"  
                android:bottom="1dp" />  
        </shape>  
    </item>  
