<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充 -->
    <solid 
        android:color="@color/white" />

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/white" />
    <!-- 间隔 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!-- 圆角 -->
    <corners 
        android:radius="5dp" />

