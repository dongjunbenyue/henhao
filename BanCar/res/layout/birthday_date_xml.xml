<?xml version="1.0" encoding="utf-8"?>
 <!-- 时间选择器 -->
    <!-- 出生日期 -->

    <RelativeLayout
        android:id="@+id/LinearLayout_user_info_birthdaydate001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#55000000"
        android:clickable="true"
        android:visibility="gone" 
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yuanjiao_biankuang_bai"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/yuanjiao_biankuang_bai"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textview_user_info_brithdaydate_quxiao001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/hintblack" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择出生日期"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textview_user_info_brithdaydate_queren001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/mainblue" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/common_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/yuanjiao_biankuang_bai"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <NumberPicker
                    android:id="@+id/NumberPicker_user_info_brithdaydate001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="年" />

                <NumberPicker
                    android:id="@+id/NumberPicker_user_info_brithdaydate002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="月" />

                <NumberPicker
                    android:id="@+id/NumberPicker_user_info_brithdaydate003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="日" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


