<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<GridView
        android:scrollbars="none"
        android:id="@+id/GridView_shop_image_show001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:numColumns="2" >
    </GridView>
  <RelativeLayout
        android:id="@+id/LinearLayout_big_imageshow001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent55"
        android:visibility="gone" >

         <com.bcwcar.android.bencar.widget.CustomViewPager
             android:layout_centerVertical="true"
                android:id="@+id/viewpager_shop_bigimage001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView_guangbi_001"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView_image_show_bigimage001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/TextView_image_show_bigimage002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView_guangbi_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/yuanjiao_biankuang_baikuang_touming"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/text_shop_wangdian_stop"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>
