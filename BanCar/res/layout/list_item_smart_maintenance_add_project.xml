<!-- 智能保养添加保养项目页面 list列布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
	android:background="@color/white"
	android:paddingLeft="10dp"
	android:paddingTop="10dp"
	android:paddingBottom="10dp">
	<LinearLayout
	    android:layout_width="0dp"
		android:layout_weight="1.0"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:background="@color/transparent">
		<com.facebook.drawee.view.SimpleDraweeView
        
        android:id="@+id/select_baoyang_image001"
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="false" />
		<TextView
		    android:id="@+id/add_project_title"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="15dp"
		    android:textSize="@dimen/common_textsize_medium"
		    android:textColor="@color/inputblack"
		    android:text="机油"/>
		
	</LinearLayout>
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:textSize="@dimen/common_textsize_small"
	    android:textColor="@color/mainblue"
	    android:layout_marginLeft="@dimen/common_view_horizontal_spacing"
	    android:text="¥"/>
	<TextView
	    android:id="@+id/add_project_price"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textColor="@color/mainblue"
	    android:layout_marginRight="25dp"
	    android:text="1627"/>
	<CheckBox
	    android:id="@+id/add_project_check"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="10dp"
    	android:layout_marginLeft="@dimen/common_view_horizontal_spacing"
	    android:button="@drawable/bg_checkbox"/>
</LinearLayout >