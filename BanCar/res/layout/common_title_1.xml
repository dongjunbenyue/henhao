<!-- 通用布局  标题  1 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <Button
        android:id="@id/common_title_1_left_view"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:gravity="center_vertical"
    	android:drawableLeft="@drawable/preback"
    	android:layout_marginLeft="10dp"
    	android:background="@color/white"
    	android:paddingLeft="5dp"/>
    <TextView
        android:id="@id/common_title_1_center_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:gravity="center_vertical"
    	android:textColor="@color/black"
    	android:textSize="@dimen/common_title_1_textsize_large" 
    	android:text="@string/app_name"/>
    <TextView
        android:paddingRight="5dp"
        android:id="@id/common_title_1_right_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:gravity="center_vertical"
    	android:textColor="@color/inputblack"
    	android:textSize="@dimen/common_title_1_textsize_small" 
    	android:text="@string/app_name"
    	android:layout_marginRight="5dp"/>
     <View android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/common_bg"
         android:layout_alignParentBottom="true"/>
</RelativeLayout>