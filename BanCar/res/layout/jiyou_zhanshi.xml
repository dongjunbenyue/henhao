<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="10dp" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_weight="1" >
    <CheckBox
            android:id="@+id/jiyou_xuanze001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_view_horizontal_spacing"
            android:button="@drawable/bg_checkbox"
            android:layout_marginRight="5dp"
           
           android:focusable="false" />
        <TextView
            android:id="@+id/jiyou_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:text="00000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="right|center_vertical" >

        <TextView
            android:id="@+id/jiyou_bancar_price001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥----"
            android:textColor="@color/mainblue" />
        <TextView android:id="@+id/mantenceexchange"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="推荐"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:textSize="11sp"
                    
                    android:textColor="@color/mainblue"
                    android:background="@drawable/yuanjiao_biankuang_huangkuang_touming"/>

       
    </LinearLayout>

</LinearLayout>