<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<com.baidu.mapapi.map.MapView  
    android:layout_alignParentTop="true"
    android:id="@+id/baidu_mapView"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:clickable="true" 
    android:layout_above="@+id/RelativeLayout_navigation001"
    />
<RelativeLayout 
    android:layout_alignParentBottom="true"
    android:id="@+id/RelativeLayout_navigation001"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/mainblue"
    android:visibility="visible">
<TextView 
    android:layout_centerVertical="true"
    android:id="@+id/TextView_navigation_text001"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="目的地"
    android:gravity="center"
    android:textColor="@color/white"/>

<View 
    android:layout_alignLeft="@+id/TextView_navigation001"
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_marginRight="10dp"
    android:background="@color/white"/>
<TextView 
    android:layout_centerVertical="true"
   android:layout_alignParentRight="true"
    android:id="@+id/TextView_navigation001"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="去目的地"
    android:gravity="center"
    android:drawableLeft="@drawable/daohang"
    android:textColor="@color/white"/>



</RelativeLayout>
</RelativeLayout>
