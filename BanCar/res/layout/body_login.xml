<!-- 登陆页面 body部分 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:padding="5dp"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

     
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         >

        <!-- <TextView
            android:layout_centerVertical="true"
            android:id="@+id/TextView_user_phone001"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_phone"
            android:textSize="16sp" /> -->

        <EditText
           
            android:id="@+id/login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="手机"
            android:inputType="phone"
           
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:id="@+id/nicknameline"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         >

        <!-- <TextView
            android:layout_centerVertical="true"
            android:id="@+id/TextView_user_phone001"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_phone"
            android:textSize="16sp" /> -->

        <EditText
           
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="昵称"
           
           
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_code_login001"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

           

            <EditText
                android:id="@+id/login_password"
                android:padding="10dp"
               
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:hint="验证码"
                android:textColor="@color/inputblack" 
                android:password="true"
                 android:textSize="16sp"
                android:inputType="number"/>
            <TextView
                android:id="@+id/TextView_set_withdraw_password_get_confirmationnum001"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/mainblue"
                android:textSize="16sp"
                android:text="@string/button_get_phonedata" 
                android:textColor="@color/white"/>
        </RelativeLayout>
        
  <RelativeLayout
      android:visibility="gone"
      android:id="@+id/RelativeLayout_password_login001"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                 android:padding="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/TextView_confirmation_phone_text002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_password" />

         <EditText
        android:layout_margin="2dp"
                android:id="@+id/login_password002"
                android:padding="10dp"
                android:layout_toRightOf="@+id/TextView_confirmation_phone_text002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="@string/text_confrimation_phonepassword_hint"
                android:textColor="@color/inputblack" 
                android:password="true"/>
        </RelativeLayout>

  <RelativeLayout
      android:visibility="gone"
       android:id="@+id/RelativeLayout_login_change_text001"
       android:padding="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView_login_change_text001"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_mima" />

   
        </RelativeLayout>
  
  
  
    <Button
        android:layout_marginTop="20dp"
       
        android:id="@+id/login_goto_my_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiao_button_lan"
        android:text="@string/button_login"
        android:textColor="@color/white"
         android:textSize="16sp"/>

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/zhucexieyiline"
            android:visibility="gone"
            android:gravity="center">
        <CheckBox android:id="@+id/checkboxzhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:button="@drawable/bg_checkbox"/> 
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已同意并阅读"
                android:textColor="@color/inputblack"
                android:layout_marginRight="5dp"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="犇车网用户协议"
                android:id="@+id/textzhucexieyi"
                android:textColor="@color/mainblue"
                />        
        </LinearLayout>

</LinearLayout>