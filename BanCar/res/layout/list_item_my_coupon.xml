<!-- 我的抵用券的ListView使用的行布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
   
    android:orientation="vertical"
    android:background="@color/common_bg"
    android:gravity="center_vertical">

    
    <LinearLayout 
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
	<TextView
	    android:id="@+id/list_item_my_coupon_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/mainblue"
		android:paddingLeft="10dp"
		android:textStyle="bold"
		android:paddingRight="10dp"
		android:textSize="28sp"
		android:text="￥00"/>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:textColor="@color/mainblue"
	    android:id="@+id/cardtype"
	    android:text="hopiu"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:gravity="center_vertical"
	    android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/transparent"
		
		android:layout_marginRight="10dp">
		<TextView
		    android:id="@+id/list_item_my_coupon_title"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/inputblack"
		
			android:singleLine="true"
			android:textSize="@dimen/common_textsize_smallup"
			android:text="保养抵用券"/>
		<TextView
		    android:id="@+id/list_item_my_coupon_typeDesc"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/inputblack"
			android:layout_marginTop="15dp"
			android:singleLine="true"
			android:textSize="@dimen/common_textsize_smallup"
			android:text="保养抵用券"/>
		<TextView
		    android:id="@+id/list_item_my_coupon_expirationTime"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/inputblack"
			android:layout_marginTop="15dp"
			android:singleLine="true"
			android:textSize="@dimen/common_textsize_smallup"
			android:text="保养抵用券"/>
	</LinearLayout>
	
</LinearLayout>
	
</LinearLayout>